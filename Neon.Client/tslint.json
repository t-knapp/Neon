{
  "extends": ["tslint:recommended", "tslint-react", "tslint-consistent-codestyle"],
  "rules": {
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "ter-indent": [true, 4],
    "semicolon": [true, "always", "strict-bound-class-methods"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "no-trailing-whitespace": true,
    "no-extra-semi": true,
    "no-multi-spaces": true,
    "ter-arrow-spacing": true,
    "no-console": false,
    "array-type": [true, "array"],
    "triple-equals": true,
    "no-string-throw": true,
    "array-bracket-spacing": [true, "never"],
    "block-spacing": [true, "always"],
    "brace-style": [
      true,
      "1tbs",
      {
        "allowSingleLine": false
      }
    ],
    "ter-computed-property-spacing": [true, "never"],
    "one-line": [true, "check-catch", "check-else", "check-finally", "check-open-brace", "check-whitespace"],
    "no-consecutive-blank-lines": true,
    "prefer-const": true,
    "no-var-keyword": true,
    "naming-convention": [
      true,
      {
        "type": "member",
        "format": "camelCase",
        "leadingUnderscore": "forbid"
      },
      {
        "type": "member",
        "modifiers": "private",
        "format": "camelCase",
        "leadingUnderscore": "require"
      },
      {
        "type": "member",
        "modifiers": "protected",
        "format": "camelCase",
        "leadingUnderscore": "require"
      },
      {
        "type": "property",
        "modifiers": ["static", "readonly"],
        "format": "UPPER_CASE",
        "leadingUnderscore": "forbid"
      },
      {
        "type": "variable",
        "format": "camelCase"
      },
      {
        "type": "variable",
        "modifiers": ["global", "const"],
        "format": ["UPPER_CASE", "PascalCase"]
      },
      {
        "type": "function",
        "modifiers": ["global"],
        "format": ["camelCase", "PascalCase"]
      },
      {
        "type": "parameter",
        "format": "camelCase",
        "leadingUnderscore": "forbid"
      },
      {
        "type": "parameter",
        "format": "camelCase",
        "filter": "^_$",
        "leadingUnderscore": "allow"
      },
      {
        "type": "enumMember",
        "format": "UPPER_CASE",
        "leadingUnderscore": "forbid"
      },
      {
        "type": "type",
        "format": "PascalCase",
        "leadingUnderscore": "forbid"
      }
    ],
    "typedef": [
      true,
      "member-variable-declaration",
      "call-signature",
      "parameter",
      "property-declaration",
      "variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "no-unnecessary-else": true,
    "no-parameter-properties": true,
    "no-var-before-return": true,
    "file-name-casing": [
      true,
      "pascal-case"
    ],
    "import-blacklist": [
      true,
      "*/../js/*"
    ],
    "max-classes-per-file": false,
    "variable-name": false,
    "radix": true,
    "no-var-requires": true,
    "no-bitwise": false,
    "curly": false,
    "member-access": {
      "options": "check-accessor",
      "severity": "warning"
    },
    "ordered-imports": false,
    "trailing-comma": false,
    "max-line-length": false,
    "object-literal-sort-keys": false,
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "member-ordering": false,
    "interface-name": false,
    "no-namespace": false,
    "no-conditional-assignment": false
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "jsRules": false
}
